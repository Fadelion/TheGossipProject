<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header">
          <h2 class="text-center">Connexion</h2>
        </div>
        <div class="card-body">
          <%= form_for(:session, url: login_path) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Entrez votre email" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Entrez votre mot de passe" %>
            </div>
            
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
            </div>
            
            <div class="d-grid gap-2">
              <%= f.submit "Se connecter", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <p>Pas encore inscrit ? <%= link_to "S'inscrire", signup_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>