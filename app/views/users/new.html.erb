<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mt-5">
        <div class="card-header">
          <h2 class="text-center">Inscription</h2>
        </div>
        <div class="card-body">
          <%= form_for @user do |f| %>
            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :first_name, "Prénom", class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control", placeholder: "Entrez votre prénom" %>
              </div>
              <div class="col-md-6">
                <%= f.label :last_name, "Nom", class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control", placeholder: "Entrez votre nom" %>
              </div>
            </div>
            
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Entrez votre email" %>
            </div>
            
            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :password, "Mot de passe", class: "form-label" %>
                <%= f.password_field :password, class: "form-control", placeholder: "6 caractères minimum" %>
              </div>
              <div class="col-md-6">
                <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "form-label" %>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmez votre mot de passe" %>
              </div>
            </div>
            
            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :age, "Âge", class: "form-label" %>
                <%= f.number_field :age, class: "form-control", placeholder: "Entrez votre âge" %>
              </div>
              <div class="col-md-6">
                <%= f.label :city_id, "Ville", class: "form-label" %>
                <%= f.collection_select :city_id, City.all, :id, :name, { prompt: "Sélectionnez votre ville" }, { class: "form-select" } %>
              </div>
            </div>
            
            <div class="mb-3">
              <%= f.label :description, "Description", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Parlez-nous de vous" %>
            </div>
            
            <div class="mb-3 form-check">
              <%= check_box_tag 'user[remember_me]', '1', false, class: "form-check-input" %>
              <%= label_tag 'user[remember_me]', "Se souvenir de moi", class: "form-check-label" %>
            </div>
            
            <div class="d-grid gap-2">
              <%= f.submit "S'inscrire", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <p>Déjà inscrit ? <%= link_to "Se connecter", login_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>